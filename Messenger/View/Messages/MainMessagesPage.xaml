<Page x:Class="Messenger.View.Messages.MainMessagesPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Messenger.View.Messages"
      mc:Ignorable="d" 
      d:DesignHeight="640" d:DesignWidth="1200"
      Title="MainMessagesPage" PreviewKeyDown="Page_PreviewKeyDown">
    <!--Main content Border Minimalistic style start-->
    <Border>
        <Grid x:Name="MainGrid">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="300"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <!--ChatsList Border start-->
            <Border Grid.Column="0" BorderBrush="White" BorderThickness="1,0,1,1" Margin="0,0,0,0" Padding="0,0,0,0">
                <StackPanel Orientation="Vertical">
                    <Label Style="{StaticResource CommonLbl}" Content="Chats" Foreground="NavajoWhite" BorderBrush="White" BorderThickness="1,1,0,1"/>
                    <Button VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0,5,0,5">
                        <Border BorderBrush="#FFD7DDE0" BorderThickness="1" VerticalAlignment="Center" HorizontalAlignment="Center">
                            <Grid Height="60" Width="300">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="60"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                </Grid.RowDefinitions>
                                <Image Grid.Column="0" Grid.RowSpan="2"/>
                                <Border Background="Gray" Grid.Column="0" Grid.RowSpan="2"/>
                                <Label Style="{StaticResource CommonLbl}" Content="Test_Name" Grid.Column="1" Grid.Row="0" HorizontalAlignment="Left" Margin="10,0,0,0"/>
                                <Border Grid.Column="1" Grid.Row="0" Grid.RowSpan="2" VerticalAlignment="Center" BorderBrush="White" BorderThickness="0.25"/>
                                <Label Style="{StaticResource CommonLbl}" Content="Test_Description" Grid.Column="1" Grid.Row="1" HorizontalAlignment="Left" Margin="10,0,0,0"/>
                            </Grid>
                        </Border>
                    </Button>
                </StackPanel>
            </Border>
            <!--ChatsList Border end-->
            <!--Selected chat Border start-->
            <Border Grid.Column="1">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="40"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="80"/>
                    </Grid.RowDefinitions>
                    <!--Input space-->
                    <Grid Grid.Row="2" VerticalAlignment="Center">
                        <Button Name="AttachFileBtn" Click="AttachFileBtn_Click" HorizontalAlignment="Left" Height="50" Width="50" Margin="21,0,0,0">
                            <Image Source="/Resources/AttachFileBtnImg.png" />
                        </Button>
                        <!--Attached files stackpannel-->
                        <StackPanel Margin="0,-150,0,0" HorizontalAlignment="Left" Orientation="Horizontal" Name="AttachedFilesStackPannel" Visibility="Visible">
                            <Image Height="120" Width="120" Margin="10" Source="/Resources/HidePswrdBtnImg.png" Stretch="Uniform" Name="amogus"/>
                            <Image Height="120" Width="120" Margin="10" Source="/Resources/HidePswrdBtnImg.png" Stretch="Uniform"/>
                        </StackPanel>
                        <TextBox Style="{StaticResource MsgInputTB}" HorizontalAlignment="Stretch"  Background="Transparent" Margin="91,0,110,0" Text=""/>
                        <Button Name="SendMsgBtn" Click="SendMsgBtn_Click" Height="50" Width="70" HorizontalAlignment="Right" Margin="0,0,20,0">
                            <Image Source="/Resources/SendBtnImg.png" Stretch="Uniform" SnapsToDevicePixels="True"/>
                        </Button>
                    </Grid>
                </Grid>
            </Border>
            <!--Selected chat Border end-->
        </Grid>
    </Border>
    <!--Main content Border Minimalistic style end-->
</Page>
