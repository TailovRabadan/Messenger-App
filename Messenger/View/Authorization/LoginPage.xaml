<Page x:Class="Messenger.View.Authorization.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Messenger.View.Authorization"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="LoginPage">

    <!--Minimalistic style start-->
    <Grid Style="{StaticResource CommonGrid}">
        <!--SP for content-->
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Orientation="Vertical">
            <!--Login-->
            <StackPanel Orientation="Horizontal" Margin="5">
                <Label Style="{StaticResource CommonLbl}" Content="Login" Foreground="NavajoWhite" Width="80"/>
                <TextBox Style="{StaticResource CommonTB}" Width="200"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="5">
                <Label Style="{StaticResource CommonLbl}" Content="Password" Foreground="NavajoWhite" Width="80"/>
                <PasswordBox x:Name="PswrdPB" Style="{StaticResource PswrdLogin}" Width="200" BorderBrush="#FFD7DDE0" BorderThickness="1"/>
                <TextBox x:Name="PswrdTB" Style="{StaticResource CommonTB}" Width="200" Visibility="Collapsed" BorderBrush="#FFD7DDE0" BorderThickness="1"/>
                <Button Style="{StaticResource CommonBtn}" x:Name="PswrdVisBtn" Click="PswrdVisBtn_Click" Height="20" Width="40" Margin="20,0,-60,0">
                    <Image Source="/Resources/HidePswrdBtnImg.png" Stretch="UniformToFill"/>
                </Button>
                <Button Style="{StaticResource CommonBtn}" x:Name="PswrdHidBtn" Click="PswrdHidBtn_Click" Height="20" Width="40" Margin="20,0,-60,0" Padding="-2" Visibility="Collapsed">
                    <Image Source="/Resources/ShowPswrdBtnImg.png" Stretch="UniformToFill"/>
                </Button>
            </StackPanel>
            <Button x:Name="LoginBtn" Height="40" Content="Log in" FontSize="14" Style="{StaticResource CommonBtn}" Margin="2.5" Click="LoginBtn_Click"/>
            <Button x:Name="SignInBtn" Height="40" Content="Sign in" FontSize="14" Style="{StaticResource CommonBtn}" Margin="2.5" Click="SignInBtn_Click"/>
        </StackPanel>
    </Grid>
    <!--Minimalistic style end-->
</Page>
